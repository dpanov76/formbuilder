{
  "simple": {
    "meta": {
      "header": "Login",
      "groups": [
        {
          "input": {
            "label": {
              "text": "Login",
              "classes": ""
            },
            "validators": [
              {
                "type": "required",
                "message": "Login is required"
              },
              {
                "type": "email",
                "message": "Incorrect email format"
              },
              {
                "type": "maxlength",
                "message": "Should not be more than 14 characters",
                "value": 24
              },
              {
                "type": "minlength",
                "message": "Should not be less than 4 characters",
                "value": 4
              }
            ],
            "control": "login",
            "placeholder": "your login here",
            "classes": ""
          }
        },
        {
          "input": {
            "label": {
              "text": "Password",
              "classes": ""
            },
            "validators": [
              {
                "type": "required",
                "message": "Password is required"
              },
              {
                "type": "pattern",
                "message": "Contains restricted characters",
                "regexp": "^[a-zA-Z0-9_.-]*$"
              }
            ],
            "control": "password",
            "placeholder": "your password here",
            "classes": ""
          }
        },
        {
          "radios": {
            "control": "dummyRadios",
            "validators": [
              {
                "type": "required",
                "message": "Select if you want to send form"
              }
            ],
            "radioGroup": [
              {
                "value": "yes",
                "text": "Yes",
                "hiddenAccessibilityText": "some hidden text for accessibility Selected Yes"
              },
              {
                "value": "no",
                "text": "No",
                "hiddenAccessibilityText": "some hidden text accessibility Selected No"
              }
            ]
          }
        },
        {
          "textarea": {
            "validators": [
              {
                "type": "required",
                "message": "This text could not be empty"
              },
              {
                "type": "pattern",
                "message": "This text contains restricted characters please remove",
                "regexp": "^[a-zA-Z0-9_.-]*$"
              }
            ],
            "control": "dummyTextArea",
            "placeholder": "put some text here",
            "value": ""
          }
        },
        {
          "checkbox": {
            "control": "tsAndCs",
            "validators": [
              {
                "type": "required",
                "checkbox": true,
                "message": "You have to agree with Terms and Conditions to use this service"
              }
            ],
            "value": false,
            "text": "I agree with terms and conditions"
          }
        },
        {
          "select": {
            "label": {
              "text": "Choose your country",
              "classes": ""
            },
            "validators": [
              {
                "type": "required",
                "message": "Country is required"
              }
            ],
            "control": "dummySelect",
            "options": [
              {
                "id": 1,
                "name": "Spain"
              },
              {
                "id": 2,
                "name": "UK"
              },
              {
                "id": 3,
                "name": "US"
              }
            ],
            "classes": ""
          }
        },
        {
          "button": {
            "control": "submitButton",
            "value": "continue",
            "type": "submit",
            "classes": ""
          }
        }
      ]
    },
    "formValues": {

    }
  }
}
